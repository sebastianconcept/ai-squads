{
  "designSystem": {
    "name": "BankFlow Design System",
    "version": "1.0.0",
    "description": "Modern dark-themed design system for BankFlow SaaS platform",
    "lastUpdated": "2024-12-19",
    "techStack": {
      "frontend": ["HTMX", "Alpine.js", "Askama Templates", "Custom CSS"],
      "backend": ["Rust", "Axum"],
      "styling": ["CSS3", "CSS Variables", "CSS Grid", "Flexbox"]
    }
  },
  "designTokens": {
    "colors": {
      "primary": {
        "background": {
          "pure": "#000000",
          "surface": "#1A1A1A",
          "card": "#1A1A1A",
          "interactive": "rgba(255, 255, 255, 0.1)"
        },
        "text": {
          "primary": "#FFFFFF",
          "secondary": "#CCCCCC",
          "muted": "#999999"
        },
        "accent": {
          "green": {
            "bright": "#66FF66",
            "mid": "#33CC33",
            "dark": "#009900",
            "hover": "#00E600",
            "active": "#00CC00"
          }
        },
        "gradients": {
          "greenStack": "linear-gradient(135deg, #66FF66 0%, #33CC33 50%, #009900 100%)",
          "glassmorphism": "rgba(255, 255, 255, 0.1)"
        }
      }
    },
    "typography": {
      "fontFamily": {
        "primary": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
        "mono": "'JetBrains Mono', 'Fira Code', Consolas, monospace"
      },
      "scale": {
        "heading1": {
          "fontSize": "64px",
          "lineHeight": "72px",
          "fontWeight": "700",
          "letterSpacing": "-0.02em"
        },
        "heading2": {
          "fontSize": "48px",
          "lineHeight": "56px",
          "fontWeight": "700",
          "letterSpacing": "-0.01em"
        },
        "heading3": {
          "fontSize": "32px",
          "lineHeight": "40px",
          "fontWeight": "600"
        },
        "heading4": {
          "fontSize": "24px",
          "lineHeight": "32px",
          "fontWeight": "600"
        },
        "bodyLarge": {
          "fontSize": "18px",
          "lineHeight": "28px",
          "fontWeight": "400"
        },
        "body": {
          "fontSize": "16px",
          "lineHeight": "24px",
          "fontWeight": "400"
        },
        "bodySmall": {
          "fontSize": "14px",
          "lineHeight": "20px",
          "fontWeight": "400"
        },
        "caption": {
          "fontSize": "12px",
          "lineHeight": "16px",
          "fontWeight": "400"
        }
      }
    },
    "spacing": {
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "48px",
      "3xl": "64px",
      "4xl": "96px"
    },
    "borderRadius": {
      "none": "0px",
      "sm": "4px",
      "md": "8px",
      "lg": "12px",
      "xl": "16px",
      "2xl": "20px",
      "pill": "9999px"
    },
    "shadows": {
      "none": "none",
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
      "glow": "0 0 20px rgba(102, 255, 102, 0.3)"
    },
    "transitions": {
      "fast": "0.15s ease-in-out",
      "normal": "0.2s ease-in-out",
      "slow": "0.3s ease-in-out"
    },
    "breakpoints": {
      "mobile": "320px",
      "tablet": "768px",
      "desktop": "1024px",
      "wide": "1280px"
    }
  },
  "components": {
    "button": {
      "variants": {
        "primary": {
          "backgroundColor": "#66FF66",
          "color": "#000000",
          "borderRadius": "var(--radius-pill)",
          "padding": "var(--spacing-sm) var(--spacing-md)",
          "fontSize": "var(--text-body)",
          "fontWeight": "500",
          "transition": "var(--transition-normal)",
          "states": {
            "hover": {
              "backgroundColor": "#00E600",
              "transform": "translateY(-1px)"
            },
            "active": {
              "backgroundColor": "#00CC00",
              "transform": "translateY(0px)"
            },
            "disabled": {
              "backgroundColor": "#666666",
              "cursor": "not-allowed"
            }
          }
        },
        "secondary": {
          "backgroundColor": "rgba(255, 255, 255, 0.1)",
          "color": "#FFFFFF",
          "borderRadius": "var(--radius-pill)",
          "padding": "var(--spacing-sm) var(--spacing-md)",
          "fontSize": "var(--text-body)",
          "fontWeight": "500",
          "backdropFilter": "blur(10px)",
          "border": "1px solid rgba(255, 255, 255, 0.2)",
          "transition": "var(--transition-normal)",
          "states": {
            "hover": {
              "backgroundColor": "rgba(255, 255, 255, 0.15)"
            },
            "active": {
              "transform": "scale(0.98)"
            }
          }
        },
        "ghost": {
          "backgroundColor": "transparent",
          "color": "#FFFFFF",
          "borderRadius": "var(--radius-pill)",
          "padding": "var(--spacing-sm) var(--spacing-md)",
          "fontSize": "var(--text-body)",
          "fontWeight": "500",
          "transition": "var(--transition-normal)",
          "states": {
            "hover": {
              "backgroundColor": "rgba(255, 255, 255, 0.1)"
            }
          }
        }
      },
      "sizes": {
        "sm": {
          "padding": "var(--spacing-xs) var(--spacing-sm)",
          "fontSize": "var(--text-body-small)"
        },
        "md": {
          "padding": "var(--spacing-sm) var(--spacing-md)",
          "fontSize": "var(--text-body)"
        },
        "lg": {
          "padding": "var(--spacing-md) var(--spacing-lg)",
          "fontSize": "var(--text-body-large)"
        }
      }
    },
    "input": {
      "variants": {
        "default": {
          "backgroundColor": "rgba(255, 255, 255, 0.1)",
          "color": "#FFFFFF",
          "borderRadius": "var(--radius-pill)",
          "padding": "var(--spacing-md) var(--spacing-lg)",
          "fontSize": "var(--text-body)",
          "border": "1px solid rgba(255, 255, 255, 0.2)",
          "backdropFilter": "blur(10px)",
          "transition": "var(--transition-normal)",
          "placeholder": {
            "color": "rgba(255, 255, 255, 0.6)"
          },
          "states": {
            "focus": {
              "outline": "none",
              "borderColor": "#66FF66",
              "boxShadow": "0 0 0 2px rgba(102, 255, 102, 0.2)"
            },
            "hover": {
              "backgroundColor": "rgba(255, 255, 255, 0.15)"
            }
          }
        },
        "search": {
          "backgroundColor": "rgba(255, 255, 255, 0.1)",
          "color": "#FFFFFF",
          "borderRadius": "var(--radius-pill)",
          "padding": "var(--spacing-sm) var(--spacing-md)",
          "fontSize": "var(--text-body-small)",
          "border": "1px solid rgba(255, 255, 255, 0.2)",
          "backdropFilter": "blur(10px)"
        }
      }
    },
    "card": {
      "variants": {
        "default": {
          "backgroundColor": "#1A1A1A",
          "borderRadius": "var(--radius-lg)",
          "padding": "var(--spacing-lg)",
          "border": "1px solid rgba(255, 255, 255, 0.1)",
          "transition": "var(--transition-normal)",
          "states": {
            "hover": {
              "transform": "translateY(-2px)",
              "boxShadow": "var(--shadow-lg)"
            }
          }
        },
        "glassmorphism": {
          "backgroundColor": "rgba(255, 255, 255, 0.1)",
          "borderRadius": "var(--radius-lg)",
          "padding": "var(--spacing-lg)",
          "backdropFilter": "blur(15px)",
          "border": "1px solid rgba(255, 255, 255, 0.2)",
          "transition": "var(--transition-normal)"
        },
        "interactive": {
          "backgroundColor": "rgba(255, 255, 255, 0.1)",
          "borderRadius": "var(--radius-lg)",
          "padding": "var(--spacing-lg)",
          "backdropFilter": "blur(10px)",
          "border": "1px solid rgba(255, 255, 255, 0.2)",
          "cursor": "pointer",
          "transition": "var(--transition-normal)",
          "states": {
            "hover": {
              "backgroundColor": "rgba(255, 255, 255, 0.15)",
              "transform": "scale(1.02)"
            },
            "active": {
              "transform": "scale(0.98)"
            }
          }
        }
      }
    },
    "layeredStack": {
      "container": {
        "position": "relative",
        "width": "200px",
        "height": "200px",
        "perspective": "1000px"
      },
      "layers": {
        "base": {
          "position": "absolute",
          "width": "100%",
          "height": "100%",
          "borderRadius": "var(--radius-2xl)",
          "backgroundColor": "#009900",
          "transform": "translateZ(0px) rotate(0deg)"
        },
        "mid": {
          "position": "absolute",
          "width": "90%",
          "height": "90%",
          "borderRadius": "var(--radius-2xl)",
          "backgroundColor": "#33CC33",
          "transform": "translateZ(10px) rotate(5deg)",
          "top": "5%",
          "left": "5%"
        },
        "top": {
          "position": "absolute",
          "width": "80%",
          "height": "80%",
          "borderRadius": "var(--radius-2xl)",
          "backgroundColor": "rgba(255, 255, 255, 0.1)",
          "backdropFilter": "blur(15px)",
          "border": "1px solid rgba(255, 255, 255, 0.2)",
          "transform": "translateZ(20px) rotate(10deg)",
          "top": "10%",
          "left": "10%"
        }
      },
      "animation": {
        "hover": {
          "transform": "rotateY(5deg) rotateX(5deg)",
          "transition": "var(--transition-normal)"
        }
      }
    },
    "navigation": {
      "header": {
        "height": "80px",
        "backgroundColor": "transparent",
        "padding": "0 var(--spacing-lg)",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "space-between",
        "position": "sticky",
        "top": "0",
        "zIndex": "1000",
        "backdropFilter": "blur(10px)"
      },
      "logo": {
        "height": "40px",
        "display": "flex",
        "alignItems": "center",
        "gap": "var(--spacing-sm)"
      },
      "nav": {
        "display": "flex",
        "alignItems": "center",
        "gap": "var(--spacing-lg)"
      },
      "navItem": {
        "color": "#FFFFFF",
        "textDecoration": "none",
        "fontSize": "var(--text-body)",
        "fontWeight": "500",
        "padding": "var(--spacing-sm) var(--spacing-md)",
        "borderRadius": "var(--radius-md)",
        "transition": "var(--transition-normal)",
        "states": {
          "hover": {
            "backgroundColor": "rgba(255, 255, 255, 0.1)"
          },
          "active": {
            "backgroundColor": "rgba(255, 255, 255, 0.2)"
          }
        }
      }
    },
    "socialButton": {
      "backgroundColor": "rgba(255, 255, 255, 0.1)",
      "color": "#FFFFFF",
      "borderRadius": "var(--radius-pill)",
      "padding": "var(--spacing-sm) var(--spacing-md)",
      "display": "flex",
      "alignItems": "center",
      "gap": "var(--spacing-xs)",
      "fontSize": "var(--text-body-small)",
      "backdropFilter": "blur(10px)",
      "border": "1px solid rgba(255, 255, 255, 0.2)",
      "transition": "var(--transition-normal)",
      "textDecoration": "none",
      "states": {
        "hover": {
          "backgroundColor": "rgba(255, 255, 255, 0.15)",
          "transform": "translateY(-1px)"
        },
        "active": {
          "transform": "scale(0.98)"
        }
      }
    },
    "creditCard": {
      "container": {
        "width": "100px",
        "height": "100px",
        "borderRadius": "var(--radius-lg)",
        "backgroundColor": "#1A1A1A",
        "overflow": "hidden",
        "position": "relative",
        "border": "1px solid rgba(255, 255, 255, 0.1)"
      },
      "card": {
        "position": "absolute",
        "width": "80px",
        "height": "50px",
        "borderRadius": "var(--radius-md)",
        "backdropFilter": "blur(10px)",
        "border": "1px solid rgba(255, 255, 255, 0.2)",
        "display": "flex",
        "flexDirection": "column",
        "justifyContent": "space-between",
        "padding": "var(--spacing-xs)",
        "fontSize": "8px",
        "color": "#FFFFFF"
      },
      "gradients": {
        "blueGreen": "linear-gradient(135deg, #3B82F6 0%, #10B981 100%)",
        "purpleBlue": "linear-gradient(135deg, #8B5CF6 0%, #3B82F6 100%)"
      }
    }
  },
  "layouts": {
    "container": {
      "maxWidth": "1280px",
      "margin": "0 auto",
      "padding": "0 var(--spacing-lg)"
    },
    "section": {
      "padding": "var(--spacing-4xl) 0",
      "minHeight": "100vh",
      "display": "flex",
      "flexDirection": "column",
      "justifyContent": "center",
      "alignItems": "center"
    },
    "grid": {
      "twoColumn": {
        "display": "grid",
        "gridTemplateColumns": "repeat(2, 1fr)",
        "gap": "var(--spacing-xl)"
      },
      "threeColumn": {
        "display": "grid",
        "gridTemplateColumns": "repeat(3, 1fr)",
        "gap": "var(--spacing-xl)"
      },
      "responsive": {
        "mobile": "1fr",
        "tablet": "repeat(2, 1fr)",
        "desktop": "repeat(3, 1fr)"
      }
    },
    "flex": {
      "center": {
        "display": "flex",
        "justifyContent": "center",
        "alignItems": "center"
      },
      "spaceBetween": {
        "display": "flex",
        "justifyContent": "space-between",
        "alignItems": "center"
      },
      "column": {
        "display": "flex",
        "flexDirection": "column",
        "gap": "var(--spacing-md)"
      }
    }
  },
  "animations": {
    "fadeIn": {
      "from": {
        "opacity": "0",
        "transform": "translateY(20px)"
      },
      "to": {
        "opacity": "1",
        "transform": "translateY(0px)"
      },
      "duration": "0.6s",
      "easing": "ease-out"
    },
    "slideIn": {
      "from": {
        "opacity": "0",
        "transform": "translateX(-20px)"
      },
      "to": {
        "opacity": "1",
        "transform": "translateX(0px)"
      },
      "duration": "0.4s",
      "easing": "ease-out"
    },
    "scaleIn": {
      "from": {
        "opacity": "0",
        "transform": "scale(0.9)"
      },
      "to": {
        "opacity": "1",
        "transform": "scale(1)"
      },
      "duration": "0.3s",
      "easing": "ease-out"
    },
    "glow": {
      "from": {
        "boxShadow": "0 0 20px rgba(102, 255, 102, 0.3)"
      },
      "to": {
        "boxShadow": "0 0 30px rgba(102, 255, 102, 0.6)"
      },
      "duration": "2s",
      "easing": "ease-in-out",
      "iterationCount": "infinite",
      "direction": "alternate"
    }
  },
  "accessibility": {
    "focusVisible": {
      "outline": "2px solid #66FF66",
      "outlineOffset": "2px"
    },
    "colorContrast": {
      "minimum": "4.5:1",
      "enhanced": "7:1"
    },
    "touchTargets": {
      "minimum": "44px"
    },
    "reducedMotion": {
      "respects": "prefers-reduced-motion",
      "fallback": "disable animations when user prefers reduced motion"
    }
  },
  "cssVariables": {
    "colors": {
      "--color-bg-primary": "#000000",
      "--color-bg-surface": "#1A1A1A",
      "--color-bg-interactive": "rgba(255, 255, 255, 0.1)",
      "--color-text-primary": "#FFFFFF",
      "--color-text-secondary": "#CCCCCC",
      "--color-text-muted": "#999999",
      "--color-accent-green": "#66FF66",
      "--color-accent-green-hover": "#00E600",
      "--color-accent-green-active": "#00CC00"
    },
    "spacing": {
      "--spacing-xs": "4px",
      "--spacing-sm": "8px",
      "--spacing-md": "16px",
      "--spacing-lg": "24px",
      "--spacing-xl": "32px",
      "--spacing-2xl": "48px",
      "--spacing-3xl": "64px",
      "--spacing-4xl": "96px"
    },
    "typography": {
      "--font-family-primary": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
      "--text-heading1": "64px",
      "--text-heading2": "48px",
      "--text-heading3": "32px",
      "--text-heading4": "24px",
      "--text-body-large": "18px",
      "--text-body": "16px",
      "--text-body-small": "14px",
      "--text-caption": "12px"
    },
    "radius": {
      "--radius-sm": "4px",
      "--radius-md": "8px",
      "--radius-lg": "12px",
      "--radius-xl": "16px",
      "--radius-2xl": "20px",
      "--radius-pill": "9999px"
    },
    "transitions": {
      "--transition-fast": "0.15s ease-in-out",
      "--transition-normal": "0.2s ease-in-out",
      "--transition-slow": "0.3s ease-in-out"
    }
  }
}

